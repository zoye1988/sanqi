<!--pages/list/index/index.wxml-->
<view class="container">

  <!--检索功能-->
  <view class="page-body tabTop" style='border-bottom:1px solid #cdcdcd;'>
    <view class="page-item item-20 page-center">
      <text style='line-height:45px;'>合计</text>
    </view>
    <view class="page-item item-30">
      <view style='line-height:30px;'>
        <text class="yuan">¥</text>
        <text class="page-price">5000.15</text>
      </view>
      <view class="page-count">2件商品</view>
    </view>
    <view class="page-item item-25 page-center cartbtn bg_gray " bindtap='clearCart'>
      <image src="../../img/rubbish.png" class="tip-big"></image>
      <text style='color:#ffffff;'>全部清空</text>
    </view>
    <view class="page-item item-25 page-center bg_red  cartbtn">
      <image src="../../img/pay.png" class="tip-big"></image>
      <text style='color:#ffffff;'>前往结算</text>
    </view>
  </view>
  

  <!--活动标语
  <view class="page-tab {{AD ? 'Show' : 'Hide'}}">
    <image class="page-tab-img" mode="aspectFill" src='../../img/ad/{{css}}_ad.png'></image>
  </view>
  -->

  <!--商品列表-->
  <view>
    <view class="page-body-border " wx:for="{{carts}}" wx:key="{{item.id}}">
      <view class="page-item item-40 page-center ">
        <image src='../../res/{{item.img}}' mode="aspectFit" class="page-body-image"></image>
      </view>
      <view class="page-item item-50 page-left">
        <view class="page-title ">{{item.title}}</view>
        <view class="page-desc">{{item.content}}</view>
        <view class="price">
          <text class="yuan">¥</text>
          <text class="page-price">{{item.price}}</text>
          <text class="page-sale {{item.ad%2==0 ? '' : 'Hide'}}">¥{{item.sale}}</text>
          <text class="page-units">{{item.unit}}</text>
        </view>
        <view >
          <view class="payment page-body {{css}}_border">
            <view class="page-item item-30 {{css}}_bgColor">
              +
            </view>
            <view class="page-item item-40 paynum">1</view>
            <view class="page-item item-30 {{css}}_bgColor">
              -
            </view>
          </view>
        </view>
      </view>
      <view class="page-item item-10 page-center">
        <image src='../../img/del.png'  mode="aspectFit" class="tip" bindtap='cancelCart' data-id='{{item.id}}'></image>
      </view>
    </view>

  </view>

</view>