/* pages/me/bill/list/index.wxss */
.container{
  margin-top:40px;
  padding-top:5px;
}
.swiper-tabs{
  width: 100%;
  text-align: center;
  background-color: #fff;
  font-size: 10pt;
  vertical-align: middle;
  border:1px solid #ededed;
  height:40px;
}
.swiper{
  display: inline-block;
  width: 25%;
  color: #777;
  line-height: 40px;
  height:40px;
  border-width: 2px;
}
.bills{
  width:95%;
  margin:0 auto;
  
}
.bill{
  margin-top:5px;
  border:1px solid #cdcdcd;
  background-color:#fff;
  border-radius: 10px;
  padding:10px 5px;
}
.page-price{
  font-size: 10pt;
}
  
.btn{
  width:100%;
  padding:1px 0px;
  line-height: 20px;
  border:1px solid #ededed;
  color:#fff;
  border-radius: 9px;
  font-size: 9pt;
}
.right{
  text-align: right;
}
.address{
  border-radius: 10px;
  border:1px solid #cdcdcd;
  padding:10px;
  margin:5px 0px;
  background-color:#ffffff;
}