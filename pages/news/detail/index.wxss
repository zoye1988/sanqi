/* pages/news/detail/index.wxss */
.container{
  background-color: #ffffff;
}
.cover{
  margin:0 auto;
  width:100%;
}
.cover image{
  width:100%;
  height:150px;
}
.desc{
  width:90%;
  margin:0 auto;
  border-radius:9px;
  background-color: #ffffff;
}
.page-title{
  border:0;
  font-size:12pt;
}
.newsdesc{
  font-size:10pt;
  color:#888;
  margin-top:20px;
  margin-bottom:20px;
  border-left: 2px solid #cdcdcd;
  padding-left: 15px;
  line-height: 25px;
  width:95%;
}
.content{
  font-size: 11pt;
  width:95%;
  text-indent: 20px;
  line-height:25px;
  text-align: left;
}
.newsfoot{
  border-radius: 5px;height:25px;line-height:25px;font-size:9pt;
  margin-top:20px;
  margin-bottom:20px;
}
.newsfoot text{
  padding:1px 3px;
  margin-left:5px;
  border:1px solid #888;
  border-radius: 6px;
  font-size: 9pt;
}
.page-desc{
  margin-top:10px;
}
.page-right{
  bottom:0;
}
.content image{
  width:100%;
  height: 200px;
  margin-top:10px;
  margin-bottom:10px;
}
.page-body-small{
  border-left: 1px solid #e4e3e3;
}